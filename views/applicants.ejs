<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Applicants</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-lg bg-light shadow-sm mb-4 px-3">
    <div class="container-fluid d-flex justify-content-between align-items-center">
      <div class="d-flex gap-2">
        <a href="/home" class="btn btn-outline-dark">🏠 Home</a>
        <a href="/settings" class="btn btn-outline-primary">⚙️ Settings</a>
        <a href="/employee-form" class="btn btn-outline-warning">👨‍💼 Add Employee</a>
        <a href="/dashboard" class="btn btn-outline-info">📊 Dashboard</a>
        <a href="/employees-map" class="btn btn-outline-secondary">🗺️ Map</a>
      </div>
      <form action="/logout" method="POST">
        <button class="btn btn-outline-danger">🚪 Logout</button>
      </form>
    </div>
  </nav>

  <div class="container my-5">
    <h2 class="mb-4 text-center">📋 All Applicants</h2>

    <table class="table table-bordered table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Experience</th>
          <th>Education</th>
          <th>Skills</th>
          <th>Result</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% applicants.forEach(app => { %>
          <tr>
            <td><%= app.name %></td>
            <td><%= app.email %></td>
            <td><%= app.experience %></td>
            <td><%= app.education %></td>
            <td><%= app.skills.join(', ') %></td>
            <td>
              <span class="badge bg-<%= app.result === 'Suitable' ? 'success' : 'danger' %>">
                <%= app.result %>
              </span>
            </td>
            <td>
              <a href="/applicants/edit/<%= app._id %>" class="btn btn-sm btn-outline-warning me-2">✏️ Update</a>
              <form method="POST" action="/applicants/delete/<%= app._id %>" style="display:inline;">
                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this applicant?')">🗑️ Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
